@model POC_PS_Automation.Domain.ViewModel.VMCompareResult
@{
    int sNo = 0;
}

<br />
<p class="align-self-center"><b>Build Validation (Elements missing in Win 2016 Server)</b></p>
<label>Folder Permission Comparison</label><a href="~/ScriptOutput/output_Folderperm_cmp.csv" target="_blank" class="float-right">CSV</a>

<div class="row">
    <div class="col-12 resultTab" id="permissionContentDiv">
        <table class="table table-bordered table-sm table-striped defaultTable " id="tblPermissionsCompare">
            <tr style="background-color:lightgray;">
                <td>No.</td>
                <td>Folder Name</td>
                <td>Group/User</td>
                <td>Permissions 2008</td>
                <td>Permissions 2016</td>
            </tr>
            @foreach (var p in Model.FolderCompareResult)
            {
                sNo++;
                <tr>
                    <td>@sNo</td>
                    <td>@p.FolderName</td>
                    <td>@p.GroupOrUser</td>
                    <td>@p.Permission2008</td>
                    <td>@p.Permission2016</td>
                </tr>
            }
        </table>
    </div>
</div>

